  <link rel="stylesheet" type="text/css" href="/css/slick-theme.css" media="all" />
  <link rel="stylesheet" type="text/css" href="/css/default.css" media="all" />
  <link rel="stylesheet" type="text/css" href="/css/style.css" media="all" />
  <link rel="stylesheet" type="text/css" href="/css/responsive.css" media="all" />
</head>

<body class="register" style="background-color: white !important;">
  <div class="container">
    <div class="logo">
      <div class="bg" style="background: #457ebe; border-radius: 9999px"></div>
      <div class="content">
        <div class="d-flex flex-column justify-content-center align-items-center gap-3">
          <h2><a href="/" class="text-light">Vinayak Finmart</a></h2>
          <a href="/login" style="width: 150px; height: 50px; border-radius: 100px; border: 3px white solid"
            class="d-flex justify-content-center align-items-center">
            <div style="color: white; font-size: 18px; font-family: Helvetica; font-weight: 400; word-wrap: break-word">
              Log-In</div>
          </a>
        </div>
        <div class="img">
          <img src="/img/login/login_person.png" alt="person_image" />
        </div>
      </div>
    </div>
    <div class="login-form d-flex justify-content-center">
      <a href="/" class="d-sm-none" style="height: 150px;width: 150px;">
        <img style="height: 100%;width: 100%;object-fit: cover;" src="img/Vinayak/9.jpg" alt="Vinayak">
      </a>
      <% if (typeof error !=='undefined' ) { %>
        <div id="errorAlert" class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <script>
          setTimeout(function () {
            document.getElementById('errorAlert').style.display = 'none';
          }, 3000);
        </script>
        <% } %>

          <form action="/register" method="post"
            class="text-center d-flex flex-column gap-3 h-min justify-content-center">
            <div style="
              color: black;
              font-size: 36px;
              font-family: Helvetica;
              font-weight: 600;
              word-wrap: break-word;
            ">
              Register
            </div>
            <!-- Enter Full Name  -->
            <div class="d-flex gap-2">

              <input placeholder="Enter First Name" type="text" required class="text-center border-0" name="firstname"
              style="
              width: 175px;
              height: 50px;
              background: rgba(0, 0, 0, 0.2);
              border-radius: 100px;
              " />
            <input placeholder="Enter Last Name" type="text" required class="text-center border-0" name="lastname"
            style="
              width: 175px;
              height: 50px;
              background: rgba(0, 0, 0, 0.2);
              border-radius: 100px;
              " />
              </div>
            <!-- Email Address -->
            <div class="d-flex gap-2">
              <!-- Email -->
              <input type="email" name="email" required placeholder="Enter Email" class="border-0 text-center"
                style="width: 175px; height: 50px; background: rgba(0, 0, 0, 0.20); border-radius: 100px"></input>
              <!-- Number  -->
              <input type="tel" name="phoneNumber" required placeholder="Contact Number" maxlength="10" minlength="10"
                class="border-0 text-center"
                style="width: 175px; height: 50px; background: rgba(0, 0, 0, 0.20); border-radius: 100px"></input>
            </div>
            <!-- Password -->
            <input placeholder="Password" required type="password" class="text-center border-0" name="password" style="
              width: 360px;
              height: 50px;
              background: rgba(0, 0, 0, 0.2);
              border-radius: 100px;
            " />
            <!--Confirm password -->
            <input placeholder="Confirm Password" class="text-center border-0" name="confirmPassword" type="password" style="
              width: 360px;
              height: 50px;
              background: rgba(0, 0, 0, 0.2);
              border-radius: 100px;
            " />
            <!-- submit button  -->
            <button type="submit" class="mx-auto" style="
              width: 150px;
              height: 50px;
              background: black;
              border-radius: 100px;
            ">
              <div style="
                color: white;
                font-size: 1.1rem;
                font-family: Helvetica;
                font-weight: 700;
                word-wrap: break-word;
              ">
                Register
              </div>
            </button>
          </form>
          <div style="
                        font-size: 15px;
                        font-family: Helvetica;
                        font-weight: 400;
                        word-wrap: break-word;
                        margin-left: 20px;
                        cursor: pointer;
                      " class="my-2 text-start d-sm-none">
            Already have an account?,
            <a href="/login" class="text-primary">
              Log-In
            </a>
          </div>
          <div class="my-2 d-flex gap-3">
            <form action="/auth/google" method="GET">
              <button type="submit" class="d-flex gap-2 justify-content-center align-items-center btn btn-primary">
                <div class="text-light">Signup with Google</div>
                <div style="cursor: pointer">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                    class="bi bi-google" viewBox="0 0 16 16">
                    <path
                      d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                  </svg>
                </div>
              </button>
            </form>
          </div>

    </div>
  </div>
  <!-- JS here -->
  <script src="/js/jquery-3.6.0.min.js"></script>
  <script src="/js/preloader.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/jquery.smoothscroll.min.js"></script>
