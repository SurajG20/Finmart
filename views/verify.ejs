  <body class="login" style="background-color: white !important">
    <div class="container">
      <div class="logo">
        <div class="bg" style="background: black; border-radius: 9999px"></div>
        <div class="content">
          <div
            class="d-flex flex-column justify-content-center align-items-center gap-3"
          >
            <h2><a href="/" class="text-light">Vinayak Finmart</a></h2>
            <a
              href="/register"
              style="
                width: 150px;
                height: 50px;
                border-radius: 100px;
                border: 3px white solid;
              "
              class="d-flex justify-content-center align-items-center"
            >
              <div
                style="
                  color: white;
                  font-size: 18px;
                  font-family: Helvetica;
                  font-weight: 400;
                  word-wrap: break-word;
                "
              >
                Sign-up
              </div>
            </a>
            <a
              href="/login"
              style="
                width: 150px;
                height: 50px;
                border-radius: 100px;
                border: 3px white solid;
              "
              class="d-flex justify-content-center align-items-center"
            >
              <div
                style="
                  color: white;
                  font-size: 18px;
                  font-family: Helvetica;
                  font-weight: 400;
                  word-wrap: break-word;
                "
              >
                Login
              </div>
            </a>
          </div>
          <div class="img">
            <img src="/img/login/login_person.png" alt="person_image" />
          </div>
        </div>
      </div>
      <div class="login-form d-flex justify-content-center">
        <a href="/" class="d-sm-none" style="height: 150px; width: 150px">
          <img
            style="height: 100%; width: 100%; object-fit: cover"
            src="img/Vinayak/7.png"
            alt=""
          />
        </a>
        <% if (typeof error !=='undefined' ) { %>
        <div
          id="errorAlert"
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <%= error %>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <script>
          setTimeout(function () {
            document.getElementById('errorAlert').style.display = 'none';
          }, 3000);
        </script>
        <% } %> <% if (typeof message !=='undefined' ) { %>
        <div
          id="errorAlert"
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <%= message %>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <script>
          setTimeout(function () {
            document.getElementById('errorAlert').style.display = 'none';
          }, 3000);
        </script>
        <% } %>

        <form
          action="/verify"
          method="post"
          class="text-center d-flex flex-column gap-3 h-min justify-content-center"
        >
          <div
            style="
              color: black;
              font-size: 36px;
              font-family: Helvetica;
              font-weight: 500;
              word-wrap: break-word;
            "
          >
            Verify Otp
          </div>

          <input
            placeholder="Enter the Otp"
            class="text-center border-0"
            name="otp"
            type="text"
            required
            style="
              width: 360px;
              height: 50px;
              background: rgba(0, 0, 0, 0.2);
              border-radius: 100px;
            "
          />
          <input type="hidden" name="email" value="<%= currentUser?.email %>" />
          <input type="hidden" name="OTP" value="<%= currentUser?.otp%>" />
          <input
            type="hidden"
            name="phoneNumber"
            value="<%= currentUser?.phoneNumber %>"
          />
          <input
            type="hidden"
            name="firstname"
            value="<%= currentUser?.firstname %>"
          />
          <input
            type="hidden"
            name="lastname"
            value="<%= currentUser?.lastname %>"
          />
          <input
            type="hidden"
            name="password"
            value="<%= currentUser?.password %>"
          />

          <div
            style="
              font-size: 15px;
              font-family: Helvetica;
              font-weight: 400;
              word-wrap: break-word;
              margin-left: 20px;
              cursor: pointer;
            "
            class="text-start my-1 d-sm-none"
          >
            Don't have an account?,
            <a href="/register" class="text-primary"> Sign-up </a>
          </div>
          <button
            type="submit"
            class="mx-auto"
            style="
              width: 150px;
              height: 50px;
              background: black;
              border-radius: 100px;
            "
          >
            <div
              style="
                color: white;
                font-size: 18px;
                font-family: Helvetica;
                font-weight: 700;
                word-wrap: break-word;
              "
            >
              Submit
            </div>
          </button>
        </form>
      </div>
    </div>
